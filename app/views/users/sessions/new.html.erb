<% provide(:title, "Sign in") %>
<span class="title">Sign in</span>

<div class="col-lg-5 col-lg-offset-3 col-md-5 col-md-offset-3 col-sm-8 col-sm-offset-2">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  
		<div class="form-group">
			<%= f.label :user_name %>
	 	 <%= f.email_field :user_name, :autofocus => true, class: "form-control" %>
	  </div>

	  <div class="form-group">
	  	<%= f.label :password %>
	  	<%= f.password_field :password, class: "form-control" %>
	  </div>

	  <% if devise_mapping.rememberable? -%>
	    <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>
		<div class="btn-group form-btn-mix">
	  	<%= f.submit "Sign in", class: "btn btn-primary" %>
	  	<%= render "users/shared/links" %>
	  </div>
	<% end %>
</div>
