<div class="col-lg-12 col-md-12 col-sm-12">
	<span class="title">Featured Products</span>
	<% @products.each do |product| %>
		<div class="col-lg-4 col-sm-4 hero-feature">
			<div class="thumbnail">	
				<a href="" class="link-p">
					<%= image_tag product.image_url, class: 'img-responsive' %>
				</a>
				<div class="caption prod-caption">
					<h4>
						<%= link_to (product_path(product.id)) do %>
							<%= product.title %>
						<% end %>
					</h4>
					<p><%= sanitize(product.description ) %></p>
					<div class="btn-group">
						<%= link_to (product_path(product.id)), class: "btn btn-default" do %>
							<%= number_to_currency(product.price) %>
						<% end %>
						<%= button_to (line_items_path(product_id: product)), remote: true, class: "btn btn-primary" do %>
							<b class="glyphicon glyphicon-shopping-cart"></b>
							Buy
						<% end %>
					</div>
				</div>
			</div>
		</div>	
	<% end %>
</div>