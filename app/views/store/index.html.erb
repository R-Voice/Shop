<div class="slide-content">
	<div class="row">	
		<div class="col-lg-9 col-md-12">
			<div class="slider">
				<ul class="bxslider">
					<li><%= image_tag("slide/LPJ14-Satin.jpg", title:"LPJ Satin")%></li>
					<li><%= image_tag("slide/SG14-Fireburst.jpg", title:"SG Standart Fireburst")%></li>
					<li><%= image_tag("slide/gibson-standart.jpg", title:"Les Paul Standart")%></li>
					<li><%= image_tag("slide/SGJ14-Chocolate.jpg", title:"SGJ Chocolate")%></li>
				</ul>
			</div>
		</div>

		<div class="col-lg-3">
			<%= image_tag "http://placehold.it/280x360", class:"img-thumbnail img-responsive"%>
		</div>
	</div>
</div>

<div class="main-content">
	<div class="row">
		<div class="col-lg-3 col-md-3 col-sm-12">
			<div class="col-lg-12 col-md-12 col-sm-6">
				<div>
					<span class="title">Categories</span>
				</div>
				<div class="list-group list-category">
					<%= link_to 'Les Paul series', store_path, class:'list-group-item' %>
					<%= link_to 'SG series', store_path, class:'list-group-item' %>
					<%= link_to 'Explorer', store_path, class:'list-group-item' %>
					<%= link_to 'Bass', store_path, class:'list-group-item' %>
				</div>
			</div>
			
			<div class="col-lg-12 col-md-12 col-sm-6">
				<span class="title">Best seller</span>
				<div class="hero-feature">
					<div class="thumbnail">	
						<a href="" class="link-p">
							<%= image_tag 'http://placehold.it/280x360' %>
						</a>
						<div class="caption prod-caption">
							<h4>
								<%= link_to "SG", store_path %>
							</h4>
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Natus, vel?</p>
							<div class="btn-group">
								<%= link_to '$500', store_path, class:'btn btn-default' %>
								<button class="btn btn-primary">
									<b class="glyphicon glyphicon-shopping-cart"></b>
									Buy
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<div class="col-lg-9 col-md-9 col-sm-12">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<span class="title">Featured Products</span>
				<% @products.each do |product| %>
					<div class="col-lg-4 col-sm-4 hero-feature">
						<div class="thumbnail">	
							<a href="" class="link-p">
								<%= image_tag 'http://placehold.it/230x260' %>
							</a>
							<div class="caption prod-caption">
								<h4>
									<%= link_to (product_path(product.id)) do %>
										<%= product.title %>
									<% end %>
								</h4>
								<p><%= sanitize(product.description ) %></p>
								<div class="btn-group">
									<%= link_to (product_path(product.id)), class:'btn btn-default' do %>
										<%= number_to_currency(product.price) %>
									<% end %>
									<%= link_to (line_items_path(product_id: product)), method: :post, class:"btn btn-primary" do %>
										<b class="glyphicon glyphicon-shopping-cart"></b>
										Buy
									<% end %>
								</div>
							</div>
						</div>
					</div>	
				<% end %>
			</div>
		</div>
	</div>
</div>
