
  <div class="col-lg-6 col-lg-offset-3 col-sm-6 col-sm-offset-3">
    <%= form_for(@product) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
  
      <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :desriprion %>
        <%= f.text_area :description, rows: 6, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :image_url  %>
        <%= f.text_field :image_url, class: 'form-control'  %>
      </div>
      <div class='form-group'>
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
      <div class="btn-group">
        <div class="input-group">
        <%= button_to 'Back', products_path, method: :get, class: 'btn btn-primary' %> 
        <% if params[:action] == "edit" %>
          <%= f.submit 'Update product', class: 'btn btn-primary' %>
        <% else %>
          <%= f.submit 'Create product', class: 'btn btn-primary' %>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>

