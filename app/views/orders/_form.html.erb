<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3">
    <%= form_for(@order) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, size:40, class: 'form-control' %>
      </div> 

      <div class="form-group"> 
        <%= f.label :address %>
        <%= f.text_area :address, rows:3, cols: 40, class: 'form-control' %>
      </div>
      
      <div class="form-group"> 
        <%= f.label :email %>
        <%= f.text_field :email, size: 40, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :pay_type %>
          <%= f.select :pay_type, Order::PAYMENT_TYPES, {}, class: 'form-control', prompt: 'Select your type payment' %>
      </div>      
      <%= f.submit 'Place Order', class: 'btn btn-primary' %>
      
    <% end %>
  </div>
</div>

